<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:text="از ردیف:"
        app:layout_constraintBottom_toBottomOf="@+id/edtExcle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edtExcle1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:text="تا ردیف:"
        app:layout_constraintBottom_toBottomOf="@+id/edtExcel2"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/edtExcel2"
        app:layout_constraintTop_toTopOf="@+id/edtExcel2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edtExcle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:fontFamily="@font/iransans"
        android:hint="تایپ کنید"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtExcel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/iransans"
        android:hint="تایپ کنید"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/edtExcle1"
        app:layout_constraintStart_toStartOf="@+id/edtExcle1"
        app:layout_constraintTop_toBottomOf="@+id/edtExcle1" />

    <Button
        android:id="@+id/buildExcel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_corner_green"
        android:fontFamily="@font/btraffic"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:text="خروجی فایل اکسل"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtExcel2"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>